    <script>
        document.getElementById('current-year').textContent = new Date().getFullYear();

        // --- Scroll-to-Center Implementation for the Fixed Nav ---
        document.querySelectorAll('.fixed-nav-item').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault(); 
                
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);

                if (targetElement) {
                    // Use scrollIntoView with 'center' block alignment for centering effect
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'center' 
                    });
                }
            });
        });

        // --- New Nav Links Placeholder Click Handler ---
        document.querySelectorAll('.nav-link-row').forEach(link => {
            link.addEventListener('click', function(e) {
                // Prevent navigation for demonstration
                e.preventDefault(); 
                
                const sectionName = this.querySelector('.main-text-new').textContent;
                console.log(`Navigating to: ${sectionName}`);
                
                // Temporary visual feedback
                this.style.backgroundColor = 'var(--tw-color-accent-orange)';
                this.querySelector('.main-text-new').style.color = 'white';
                this.querySelector('.sub-text-new').style.color = 'white';
                
                setTimeout(() => {
                    this.style.backgroundColor = '';
                    this.querySelector('.main-text-new').style.color = '';
                    this.querySelector('.sub-text-new').style.color = '';
                }, 300);
            });
        });
    </script>
